{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist/cjs",
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/scripts/**/*",
    "src/utils/DaemonController.ts",
    "src/commands/StartCommand.ts",
    "src/commands/StopCommand.ts",
    "src/commands/StatusCommand.ts",
    "src/commands/MCPCommand.ts",
    "src/mcp/**/*"
  ]
}
